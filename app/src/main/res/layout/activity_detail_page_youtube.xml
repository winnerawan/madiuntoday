<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center"
             android:background="@android:color/black" android:layout_width="wrap_content"
             android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <com.google.android.youtube.player.YouTubePlayerView android:id="@+id/youtube_view"
                                                             android:layout_width="match_parent"
                                                             android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/lyt_on_touch"
                  android:paddingTop="@dimen/padding_top_15dp" android:visibility="visible"
                  android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="horizontal" android:paddingLeft="@dimen/padding_left_15dp"
                      android:paddingRight="@dimen/padding_right_15dp" android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <ImageView android:id="@+id/img_back" android:layout_width="@dimen/width_25dp"
                       android:layout_height="@dimen/height_25dp"
                       android:scaleType="fitXY"/>
        </LinearLayout>
        <LinearLayout android:gravity="bottom" android:orientation="vertical" android:layout_width="match_parent"
                      android:layout_height="@dimen/nol_dp" android:layout_weight="1">
            <LinearLayout android:gravity="left" android:orientation="vertical"
                          android:background="@color/bg_Detail_video" android:paddingLeft="@dimen/padding_left_23dp"
                          android:paddingTop="@dimen/padding_top_10dp" android:paddingRight="@dimen/padding_right_30dp"
                          android:paddingBottom="@dimen/padding_bottom_8dp" android:layout_width="@dimen/width_233dp"
                          android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/txt_session" android:textColor="@color/txt_session"
                          android:id="@+id/txt_session" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" />
                <TextView android:textSize="@dimen/txt_title" android:textColor="@color/txt_title"
                          android:id="@+id/txt_title" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" />
                <TextView android:textSize="@dimen/txt_sub_title" android:textColor="@color/txt_sub_title"
                          android:ellipsize="end" android:id="@+id/txt_sub_title"
                          android:paddingBottom="@dimen/padding_bottom_15dp" android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:singleLine="true"/>
                <LinearLayout android:visibility="gone" android:orientation="horizontal" android:layout_width="wrap_content"
                              android:layout_height="30dp">
                    <ImageView android:id="@+id/img_rate" android:layout_width="@dimen/width_25dp"
                               android:layout_height="@dimen/height_25dp"
                               android:scaleType="fitXY"/>
                    <View android:layout_width="15dp" android:layout_height="wrap_content"/>
                    <ImageView android:id="@+id/img_watch_list" android:visibility="gone"
                               android:layout_width="@dimen/width_25dp" android:layout_height="@dimen/height_25dp"
                                android:scaleType="fitXY"/>
                    <View android:visibility="gone" android:layout_width="15dp" android:layout_height="wrap_content"/>
                    <ImageView android:id="@+id/img_comment" android:layout_width="@dimen/width_25dp"
                               android:layout_height="@dimen/height_25dp"
                               android:scaleType="fitXY"/>
                    <View android:layout_width="15dp" android:layout_height="wrap_content"/>
                    <ImageView android:id="@+id/img_share" android:layout_width="@dimen/width_25dp"
                               android:layout_height="@dimen/height_25dp"
                               android:scaleType="fitXY"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="bottom" android:orientation="horizontal" android:layout_width="match_parent"
                      android:layout_height="@dimen/nol_dp" android:layout_weight="1">
            <LinearLayout android:orientation="horizontal" android:id="@+id/lyt_next_episode"
                          android:background="@color/bg_next_episode" android:paddingLeft="@dimen/padding_left_27dp"
                          android:paddingTop="@dimen/padding_top_15dp" android:paddingRight="@dimen/padding_right_15dp"
                          android:paddingBottom="@dimen/padding_bottom_15dp" android:visibility="gone"
                          android:layout_width="match_parent" android:layout_height="wrap_content">
                <FrameLayout android:paddingLeft="@dimen/padding_left_12dp" android:layout_width="wrap_content"
                             android:layout_height="wrap_content">
                    <ImageView android:id="@+id/img_next" android:layout_width="@dimen/width_151dp"
                               android:layout_height="@dimen/height_85dp" android:src="@mipmap/ic_launcher"
                               android:scaleType="fitXY"/>
                    <ImageView android:layout_gravity="center" android:layout_width="wrap_content"
                               android:layout_height="wrap_content" android:src="@mipmap/ic_play"/>
                </FrameLayout>
                <LinearLayout android:gravity="left" android:orientation="vertical"
                              android:paddingLeft="@dimen/padding_left_10dp" android:layout_width="@dimen/nol_dp"
                              android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView android:textSize="@dimen/txt_next" android:textColor="@color/white"
                              android:id="@+id/txt_next" android:paddingBottom="@dimen/padding_bottom_10dp"
                              android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:textSize="@dimen/txt_episode_size_14sp"
                              android:textColor="@color/white" android:id="@+id/txt_next_episode"
                              android:paddingBottom="@dimen/padding_bottom_4dp" android:layout_width="wrap_content"
                              android:layout_height="wrap_content" />
                    <TextView android:textSize="@dimen/txt_title" android:textColor="@color/txt_title"
                              android:id="@+id/txt_next_title" android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>
                </LinearLayout>
                <ImageView android:id="@+id/img_close" android:layout_width="@dimen/width_20dp"
                           android:layout_height="@dimen/height_20dp"
                           android:scaleType="fitXY"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>